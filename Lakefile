# import "github.com/maxmcd/lake/lib/busybox" {}
# https://github.com/google/starlark-go/blob/master/starlark/example_test.go


store "busybox_tar" {
  env = {
    fetch_url = "true"
    url       = "http://lake.com/busybox.tar.gz"
  }
  network = true
}

config {
  # Shell? Builder? Interpreter? Command?
  shell = ["${busybox_tar}/bin/busybox", "sh"]
}

store "busybox_store" {
  # TODO: check that this file exists
  inputs = [
    busybox_tar, "./script.sh",
    # lib.lake_tar_gz,
  ]
  env = {
    FOO = "bar"
  }
  # TODO: consider
  # network = true
  # target = "x86"
  script = <<EOH
    #!${busybox_tar}/bin/busybox sh
    sh ./script.sh
  EOH
}


build_script = "./script.sh"

# TODO: validate store names contain valid characters for arguments
store "busybox_store_alt" {
  inputs = [busybox_tar, build_script]
  shell  = ["${busybox_tar}/bin/busybox", "sh"]
  script = "sh ./script.sh"
}

target "busybox" {
  inputs = [busybox_store]
  script = <<EOH
    #!${busybox_store}/bin/busybox sh
    $busybox_store $@
  EOH
}

